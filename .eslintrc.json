{
  "extends": "next/core-web-vitals",
  "rules": {
    "jsx-quotes": ["error", "prefer-double"], // or 'prefer-single' if you want to prefer single quotes
    "react/jsx-curly-brace-presence": [
      1,
      { "props": "ignore", "children": "ignore" }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
